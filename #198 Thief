class Solution {
public:
    int rob(vector<int>& nums) {
        if(nums.size() == 1) return nums[0];

        vector<int> dp(nums.size(), 0);
        dp[0] = nums[0]; dp[1] = nums[1];
        for(int i=2; i<nums.size(); i++){
            int max = dp[0];
            for(int j=0; j<i-1; j++)
                if(dp[j] > max) 
                    max = dp[j];
            
            dp[i] = max + nums[i];
        }

        return max(dp[nums.size()-1], dp[nums.size()-2]);
    }
};
